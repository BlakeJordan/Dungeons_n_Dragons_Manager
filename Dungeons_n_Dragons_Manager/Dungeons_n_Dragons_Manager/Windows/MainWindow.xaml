<Window
    x:Class="Dungeons_n_Dragons_Manager.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dungeons_n_Dragons_Manager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dungeons and Dragons Manager"
    Width="800"
    Height="450"
    Icon="../Assets/Icon.ico"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="About" />
        </Menu>

        <Border Grid.Row="1" Padding="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TabControl Grid.Row="0" Grid.Column="0">

                    <TabItem Header="Dice Roll" />

                    <TabItem DataContext="{Binding CharactersViewModel}" Header="Characters">
                        <Border Padding="5">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">

                                    <Button
                                        Margin="2.5,0,1,0"
                                        Command="{Binding ChooseRandomEncounter}"
                                        Content=" Add Character " />

                                    <Button
                                        Margin="0,0,2.5,0"
                                        Command="{Binding ChooseRandomEncounter}"
                                        Content=" Edit Character " />

                                    <ComboBox
                                        Width="140"
                                        Margin="2.5,0,0,0"
                                        DisplayMemberPath="Name"
                                        ItemsSource="{Binding Characters}"
                                        SelectedItem="{Binding SelectedCharacter}" />
                                </StackPanel>

                                <GroupBox Grid.Row="1" Header="Character Stats">
                                    <Border Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Level" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.Level, StringFormat='Level: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.XP, StringFormat='XP: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Armor" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.ArmorType, StringFormat='Type: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.AC, StringFormat='Class: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Hit Points" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.HP, StringFormat='Amount: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.MaxHP, StringFormat='Dice: {0}'}" />
                                            </StackPanel>

                                            <Separator
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="3" />

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Strength" />
                                                <TextBlock Text="{Binding SelectedCharacter.Strength, StringFormat='Rating: {0}'}" />
                                                <TextBlock Text="{Binding SelectedCharacter.StrengthMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Dexterity" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.Dexterity, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.DexterityMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Constitution" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.Constitution, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.ConstitutionMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Intelligence" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.Intelligence, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.IntelligenceMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Wisdom" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.Wisdom, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.WisdomMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Charisma" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.Charisma, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedCharacter.CharismaMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </GroupBox>
                            </Grid>
                        </Border>
                    </TabItem>

                    <TabItem DataContext="{Binding EncountersTabViewmodel}" Header="Encounters">
                        <Border Padding="5">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        Margin="0,0,2.5,0"
                                        Command="{Binding ChooseRandomEncounter}"
                                        Content=" Random Encounter " />

                                    <ComboBox
                                        Width="140"
                                        Margin="2.5,0,0,0"
                                        DisplayMemberPath="Name"
                                        ItemsSource="{Binding CollectionOfMonsters}"
                                        SelectedItem="{Binding SelectedMonster}" />
                                </StackPanel>

                                <GroupBox Grid.Row="1" Header="Monster Stats">
                                    <Border Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Challenge" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.ChallengeRating, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.ChallengeXP, StringFormat='XP: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Armor" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.ArmorClassType, StringFormat='Type: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.ArmorClass, StringFormat='Class: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Hit Points" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.HitPoints, StringFormat='Amount: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.HitPointsDice, StringFormat='Dice: {0}'}" />
                                            </StackPanel>

                                            <Separator
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="3" />


                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Strength" />
                                                <TextBlock Text="{Binding SelectedMonster.Strength, StringFormat='Rating: {0}'}" />
                                                <TextBlock Text="{Binding SelectedMonster.StrengthMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Dexterity" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.Dexterity, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.DexterityMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Constitution" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.Constitution, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.ConstitutionMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Intelligence" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.Intelligence, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.IntelligenceMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Wisdom" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.Wisdom, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.WisdomMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                HorizontalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="Charisma" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.Charisma, StringFormat='Rating: {0}'}" />
                                                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedMonster.CharismaMod, StringFormat='Modifier: {0}'}" />
                                            </StackPanel>

                                        </Grid>
                                    </Border>
                                </GroupBox>


                            </Grid>
                        </Border>
                    </TabItem>

                </TabControl>

            </Grid>
        </Border>

    </Grid>

</Window>
