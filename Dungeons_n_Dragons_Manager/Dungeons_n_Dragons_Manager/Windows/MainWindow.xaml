<Window x:Class="Dungeons_n_Dragons_Manager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dungeons_n_Dragons_Manager"
        mc:Ignorable="d"
        Title="Dungeons and Dragons Manager" Height="450" Width="800"
        Icon="../Assets/Icon.ico">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Column="0"
                  Grid.Row="0">
            <MenuItem Header="About"/>
        </Menu>

        <Border Grid.Row="1" Padding="5">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TabControl Grid.Column="0"
                        Grid.Row="0">

                    <TabItem Header="Dice Roll">
                    </TabItem>

                    <TabItem Header="Characters">
                    </TabItem>

                    <TabItem Header="Encounters" DataContext="{Binding EncountersTabViewmodel}">
                        <Border Padding="5">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Button
                                            Margin="0,0,2.5,0"
                                            Content=" Random Encounter "
                                            Command="{Binding ChooseRandomEncounter}"/>

                                    <ComboBox Margin="2.5,0,0,0"
                                              Width="140"
                                              ItemsSource="{Binding CollectionOfMonsters}"
                                              SelectedItem="{Binding SelectedMonster}"
                                              DisplayMemberPath="Name"/>
                                </StackPanel>

                                <GroupBox Grid.Row="1"
                                          Header="Monster Stats">
                                    <Border Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                
                                            </Grid.RowDefinitions>
                                        </Grid>
                                    </Border>
                                </GroupBox>
                                

                            </Grid>
                        </Border>
                    </TabItem>

                </TabControl>

            </Grid>
        </Border>

    </Grid>

</Window>
