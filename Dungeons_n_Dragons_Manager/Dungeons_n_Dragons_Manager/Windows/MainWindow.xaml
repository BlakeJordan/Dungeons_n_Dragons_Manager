<Window x:Class="Dungeons_n_Dragons_Manager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dungeons_n_Dragons_Manager"
        mc:Ignorable="d"
        Title="Dungeons and Dragons Manager" Height="450" Width="800"
        Icon="../Assets/Icon.ico">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Column="0"
                  Grid.Row="0">
            <MenuItem Header="About"/>
        </Menu>

        <Border Grid.Row="1" Padding="5">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TabControl Grid.Column="0"
                        Grid.Row="0">

                    <TabItem Header="Dice Roll" DataContext="{Binding DiceRollTabViewmodel}">
                        <Border Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Column="0" Grid.Row="0"
                                        Padding="2.5">
                                    <StackPanel>
                                        <DataGridColumnHeader Content="Choose which dice to roll:" />
                                        <CheckBox x:Name="D4" Content="D4" Margin="24,2,0,0" />
                                        <CheckBox x:Name="D6" Content="D6" Margin="24,2,0,0" />
                                        <CheckBox x:Name="D8" Content="D8" Margin="24,2,0,0"/>
                                        <CheckBox x:Name="D10" Content="D10" Margin="24,2,0,0" />
                                        <CheckBox x:Name="D12" Content="D12" Margin="24,2,0,0"/>
                                        <CheckBox x:Name="D20" Content="D20" Margin="24,2,0,0"/>
                                        <CheckBox x:Name="D100" Content="D100" Margin="24,2,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="0" Grid.Row="1" Padding="2.5">
                                    <Button Content="Roll" Command="{Binding Click}"  Height="24" Margin="67.6,5.6,38.4,166.4" Width="50"/>
                                </Border>

                                <Border Grid.Column="1" Grid.Row="0" Padding="3.5">
                                    <StackPanel>
                                        <DataGridColumnHeader Content="How many dice do you want to roll?" />
                                        <TextBox x:Name="D4Input"  Height="15" Width="40" Margin="0,2,0,0" Text="{Binding Path=D4Input, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBox x:Name="D6Input"  Height="15" Width="40" Margin="0,2,0,0" Text="{Binding Path=D6Input, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBox x:Name="D8Input"  Height="15" Width="40" Margin="0,2,0,0" Text="{Binding Path=D8Input, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBox x:Name="D10Input"  Height="15" Width="40" Margin="0,2,0,0" Text="{Binding Path=D10Input, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBox x:Name="D12Input"  Height="15" Width="40" Margin="0,2,0,0" Text="{Binding Path=D12Input, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBox x:Name="D20Input" Height="15" Width="40" Margin="0,2,0,0" Text="{Binding Path=D20Input, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBox x:Name="D100Input"  Height="15" Width="40" Margin="0,2,0,0" Text="{Binding Path=D100Input, UpdateSourceTrigger=PropertyChanged}" />
                                       </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Grid.Row="1" Padding="2.5">
                                    <TextBlock x:Name="Result" Text="{Binding rolls}"/>
                                </Border>


                            </Grid>
                        </Border>
                    </TabItem>

                    <TabItem Header="Characters">
                    </TabItem>

                    <TabItem Header="Encounters" DataContext="{Binding EncountersTabViewmodel}">
                        <Border Padding="5">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Button
                                            Margin="0,0,2.5,0"
                                            Content=" Random Encounter "
                                            Command="{Binding ChooseRandomEncounter}"/>

                                    <ComboBox Margin="2.5,0,0,0"
                                              Width="140"
                                              ItemsSource="{Binding CollectionOfMonsters}"
                                              SelectedItem="{Binding SelectedMonster}"
                                              DisplayMemberPath="Name"/>
                                </StackPanel>

                                <GroupBox Grid.Row="1"
                                          Header="Monster Stats">
                                    <Border Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
                                                <TextBlock Text="Challenge"
                                                               FontSize="14"
                                                               FontWeight="DemiBold"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.ChallengeRating, StringFormat='Rating: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.ChallengeXP, StringFormat='XP: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">
                                                <TextBlock Text="Armor"
                                                               FontSize="14"
                                                               FontWeight="DemiBold"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.ArmorClassType, StringFormat='Type: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.ArmorClass, StringFormat='Class: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center">
                                                <TextBlock Text="Hit Points"
                                                               FontSize="14"
                                                               FontWeight="DemiBold"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.HitPoints, StringFormat='Amount: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.HitPointsDice, StringFormat='Dice: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <Separator Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                                                       Margin="0,0,0,15"/>


                                            <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center">
                                                <TextBlock Text="Strength"
                                                               FontSize="14"
                                                               FontWeight="DemiBold"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.Strength, StringFormat='Rating: {0}'}"/>
                                                <TextBlock Text="{Binding SelectedMonster.StrengthMod, StringFormat='Modifier: {0}'}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center">
                                                <TextBlock Text="Dexterity"
                                                               FontSize="14"
                                                               FontWeight="DemiBold"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.Dexterity, StringFormat='Rating: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.DexterityMod, StringFormat='Modifier: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center">
                                                <TextBlock Text="Constitution"
                                                               FontSize="14"
                                                               FontWeight="DemiBold"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.Constitution, StringFormat='Rating: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.ConstitutionMod, StringFormat='Modifier: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center">
                                                <TextBlock Text="Intelligence"
                                                           FontSize="14"
                                                           FontWeight="DemiBold"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.Intelligence, StringFormat='Rating: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.IntelligenceMod, StringFormat='Modifier: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center">
                                                <TextBlock Text="Wisdom"
                                                               FontSize="14"
                                                               FontWeight="DemiBold"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.Wisdom, StringFormat='Rating: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.WisdomMod, StringFormat='Modifier: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center">
                                                <TextBlock Text="Charisma"
                                                           FontSize="14"
                                                           FontWeight="DemiBold"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.Charisma, StringFormat='Rating: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding SelectedMonster.CharismaMod, StringFormat='Modifier: {0}'}"
                                                               HorizontalAlignment="Center"/>
                                            </StackPanel>

                                        </Grid>
                                    </Border>
                                </GroupBox>
                                

                            </Grid>
                        </Border>
                    </TabItem>

                </TabControl>

            </Grid>
        </Border>

    </Grid>

</Window>
